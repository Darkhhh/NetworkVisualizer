<UserControl x:Class="NetworkVisualizer.Code.MVVM.Views.Controls.RenameDocumentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkVisualizer.Code.MVVM.Views.Controls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200" Cursor="IBeam"
             d:DataContext="{d:DesignInstance Type=local:RenameDocumentViewModel}">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Target="{Binding ElementName=NewDocumentTitle}" Content="Enter new name:" Margin="25,5,15,0"/>
            <ui:TextBox x:Name="NewDocumentTitle" Text="{Binding DocumentTitle}" Margin="15,0,15,0"/>
        </StackPanel>
        
    </Grid>
</UserControl>
